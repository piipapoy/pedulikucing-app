generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  adoptions Adoption[]
  reports   Report[]
}

model Cat {
  id          Int      @id @default(autoincrement())
  name        String
  age         Int
  gender      String
  breed       String
  description String   @db.Text
  imageUrl    String
  isAdopted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  adoptions Adoption[]
}

model Adoption {
  id        Int            @id @default(autoincrement())
  userId    Int
  catId     Int
  status    AdoptionStatus @default(PENDING)
  reason    String         @db.Text
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id])
  cat  Cat  @relation(fields: [catId], references: [id])
}

model Report {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String   @db.Text
  location    String
  imageUrl    String?
  status      String   @default("Pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
  SHELTER
}

enum AdoptionStatus {
  PENDING
  INTERVIEW
  APPROVED
  REJECTED
  COMPLETED
}